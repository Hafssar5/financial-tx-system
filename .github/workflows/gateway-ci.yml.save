name: Gateway CI

on:
  push:
    paths:
      - 'services/gateway/**'
      - '.github/workflows/gateway-ci.yml'
  pull_request:

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          cd services/gateway
          pip install --upgrade pip
          pip install -r requirements.txt pytest

      - name: Run unit tests
        run: |
          cd services/gateway
          pytest -q


